<odoo>
    <record id="modify_followers_task_wizard" model="ir.ui.view">
        <field name="name">modify.followers.task.wizard</field>
        <field name="model">modify.followers.task.wizard</field>
        <field name="arch" type="xml">
            <form>
                <h2>Followers</h2>
                <field name="follower_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                <footer>
                    <button name="modify_followers" string="ACCEPT"
                            type="object" default_focus="1" class="oe_highlight"/>
                    <button string="CANCEL" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_modify_followers_task" model="ir.actions.act_window">
        <field name="name">Modify Followers</field>
        <field name="res_model">modify.followers.task.wizard</field>
        <field name="view_id" ref="modify_followers_task_wizard"/>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="target">new</field>
    </record>
</odoo>