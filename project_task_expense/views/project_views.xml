<odoo>
    <record id="project_task_expense_edit_project" model="ir.ui.view">
        <field name="name">project.task.expense.edit.project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="allow_tasks_expenses" invisible="1" />
                <button
                    name="action_view_expenses"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-dollar"
                    attrs="{'invisible': [('allow_tasks_expenses', '=', False)]}"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value ">
                            <field
                                name="expenses_count"
                                widget="statinfo"
                                nolabel="1"
                            />
                            Expenses
                        </span>
                    </div>
                </button>
            </xpath>
            <group name="group_time_managment" position="after">
                <group
                    name="group_tasks_expenses"
                    string="Tasks Expenses"
                    col="1"
                    class="row mt16 o_settings_container"
                >
                    <div class="o_setting_box" id="tasks_expenses_settings" colspan="2">
                        <div class="o_setting_left_pane">
                            <field name="allow_tasks_expenses" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                for="allow_tasks_expenses"
                                string="Allow Tasks Expenses"
                            />
                            <div class="text-muted">
                                Create expenses related to tasks
                            </div>
                        </div>
                    </div>
                </group>
            </group>
        </field>
    </record>
    <record id="project_task_expense_view_task_form2" model="ir.ui.view">
        <field name="name">project.task.expense.view.task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="allow_tasks_expenses" invisible="1" />
                <button
                    name="action_view_expenses"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-dollar"
                    attrs="{'invisible': [('allow_tasks_expenses', '=', False)]}"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value ">
                            <field
                                name="expenses_count"
                                widget="statinfo"
                                nolabel="1"
                            />
                            Expenses
                        </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
    <record
        id="project_task_expense_hr_expense_view_expenses_analysis_tree"
        model="ir.ui.view"
    >
        <field
            name="name"
        >project.task.expense.hr.expense.view.expenses.analysis.tree</field>
        <field name="model">hr.expense</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="hr_expense.hr_expense_view_expenses_analysis_tree"
        />
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="project_task_id" />
            </field>
        </field>
    </record>
</odoo>
