<odoo>
    <record id="task_requirements_mgmt_view_task_form2" model="ir.ui.view">
        <field name="name">task.requirements.mgmt.view.task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
        	<xpath expr="//notebook" position="inside">
                <page name="task_requirements" string="Requirements">
                    <field name="task_requirement_ids">
                        <tree editable="bottom">
                            <field name="specification_date" width="0.2" />
                            <field name="description" />
                            <field name="completed" width="0.15" />
                            <field name="completed_date" width="0.15" />
                            <field name="tested" width="0.15" />
                            <field name="tested_date" width="0.15" />
                        </tree>
                    </field>
                </page>
        	</xpath>
        </field>
    </record>
</odoo>
