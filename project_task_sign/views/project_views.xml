<odoo>
    <record id="project_task_sign_edit_project" model="ir.ui.view">
        <field name="name">project.task.sign.edit.project</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Signature">
                    <group>
                        <field name="allow_customer_signature" />
                        <field
                            name="send_automatic_signature_mail"
                            attrs="{'invisible': [('allow_customer_signature', '=', False)]}"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="project_task_sign_view_task_form2" model="ir.ui.view">
        <field name="name">project.task.sign.view.task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="action_send_task_mail"
                    string="Send Worksheet"
                    type="object"
                    class="btn-primary"
                    attrs="{'invisible': [('allow_customer_signature', '=', False)]}"
                />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    string="Portal Task"
                    class="oe_stat_button"
                    name="action_portal_task"
                    icon="fa-globe"
                    type="object"
                >
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Signature">
                    <group>
                        <group>
                            <label for="allow_customer_signature" />
                            <div name="tracking">
                                <field
                                    name="allow_customer_signature"
                                    class="oe_inline text-break"
                                />
                                <button
                                    icon="fa-times"
                                    string="Reset Signature"
                                    type="object"
                                    name="reset_signature"
                                    attrs="{'invisible': [('signed', '=', False)]}"
                                />
                            </div>
                        </group>
                        <group>
                            <field
                                name="send_automatic_signature_mail"
                                attrs="{'invisible': [('allow_customer_signature', '=', False)]}"
                            />
                        </group>
                    </group>
                    <group
                        attrs="{'invisible': [('allow_customer_signature', '=', False)]}"
                    >
                        <group>
                            <field name="signed" />
                        </group>
                        <group attrs="{'invisible': [('signed', '=', False)]}">
                            <field name="signature_date" />
                            <field name="signature_name" />
                            <field name="signature_img" widget="image" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
