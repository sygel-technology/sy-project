<odoo>
    <record id="project_task_block_reason_view_task_form2" model="ir.ui.view">
        <field name="name">project.task.block.reason.view_task.form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
        	<xpath expr="//group[1]" position="before">
        		<group name="blocked_reason">
        			<field name="task_blocked_reason" attrs="{'invisible': [('kanban_state', '!=', 'blocked')]}" decoration-danger="1 == 1"/>
        		</group>
        	</xpath>
        </field>
    </record>

    <record id="project_task_block_reason_view_task_kanban" model="ir.ui.view">
        <field name="name">project.task.block.reason.view.task.kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-name='kanban-box']/div[1]/div[1]/div[3]" position="after">
                <div name="blocked_reason">
                    <field name="task_blocked_reason"  attrs="{'invisible': [('kanban_state', '!=', 'blocked')]}" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
